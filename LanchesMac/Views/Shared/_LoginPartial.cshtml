@using Microsoft.AspNetCore.Identity;

@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
	<form asp-controller="Account" asp-action="Logout" id="logoutForm"
		  method="post" class="navbar-left">
		<ul class="nav navbar-nav navbar-left">
			<button type="submit" style="width:auto" class="nav-link btn btn-link px-3">
				Logout &nbsp;:&nbsp; @User.Identity.Name
			</button>
		</ul>
	</form>
}
else
{
	<ul class="nav navbar-nav navbar-left">
		<a class="nav-link text-light px-3" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@string.Format("{0}{1}",Context.Request.Path, Context.Request.QueryString)">Log in</a>
		<a class="nav-link text-light px-3" asp-controller="Account" asp-action="Register">Registro </a>
	</ul>
}