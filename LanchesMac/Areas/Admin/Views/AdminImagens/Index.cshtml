<br />
<h4><strong>Gerenciar Imagens</strong></h4>
<br />
<table border="0" width="100%">
    <tr class="row">
        <td class="col-6">
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="UploadFiles">
                <img src="~/images/upload2.png" width="200" height="150" />
                <div style="margin-top: 2px;"></div>
                <br />
                <br />
                <hr />
                <div class="form-group" style="margin-bottom: 18px">
                    <div class="col-md-10">
                        <p><b>Selecione um ou mais arquivos para enviar :</b></p>
                        <p>(Arquivos com o mesmo nome serão sobrescritos)</p>
                        <input type="file" name="files" multiple class="btn btn-outline-primary" />
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Enviar Arquivo(s)" class="btn btn-outline-primary" />
                    </div>
                </div>
            </form>
        </td>
        <td class="col-6">
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="GetImagens">
                <img src="~/images/visualizar1.jpg" width="200" height="200" />
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <p><strong>Visualizar Imagens na pasta do servidor :</strong></p>
                    </div>
                </div>
                <br />
                <div class="form-group">
                <br />
                    <div class="col-md-10">
                        <input type="submit" value="Visualizar Arquivos no servidor" class="btn btn-outline-warning" />
                    </div>
                </div>
                <hr />
            </form>
        </td>
    </tr>
</table>
<div class="">
    @if (ViewData["Deletado"] != null)
    {
        <li class="jumbotron mt-2 p-0">@ViewData["Deletado"]</li>
    }
</div>