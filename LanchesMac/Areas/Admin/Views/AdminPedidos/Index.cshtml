@model ReflectionIT.Mvc.Paging.PagingList<LanchesMac.Models.Pedido>

@{
	ViewData["Title"] = "Index";
}

<h1>Pedidos</h1>

<form method="get" class="form-inline">
	<input name="filter" class="form-control" placeholder="filtro" 
			value="@Model.RouteValue["Filter"]" />
	<button type="submit" class="btn btn-info">
		<span class="glyphicon glyphicon-search" aria-hidden="true"></span> Procurar
	</button>
</form>

Total de Pedidos : @Model.TotalRecordCount
<div>
	<vc:pager paging-list="@Model"></vc:pager>
</div>

<p>
	<a class="btn btn-primary" asp-action="Create">	
		<i class="bi bi-plus-lg pe-1"></i>Criar novo Pedido
	</a>
</p>

<table class="table table align-middle table-striped">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Sobrenome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Endereco1)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Endereco2)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Cep)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Estado)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Cidade)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Telefone)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.PedidoEnviado)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.PedidoEntregueEm)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Sobrenome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Endereco1)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Endereco2)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Cep)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Estado)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Cidade)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Telefone)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PedidoEnviado)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PedidoEntregueEm)
				</td>
				<td class="td-actions">
					<a class="btn btn-warning w-100" asp-action="Edit" asp-route-id="@item.PedidoId"><i class="bi bi-pencil-square pe-1"></i>Editar</a>
					<a class="btn btn-secondary my-1 w-100" asp-action="Details" asp-route-id="@item.PedidoId"><i class="bi bi-file-text pe-1"></i>Detalhes</a>
					<a class="btn btn-danger w-100" asp-action="Delete" asp-route-id="@item.PedidoId"><i class="bi bi-trash p3-1"></i>Deletar</a>
					<a class="btn btn-outline-dark mt-1 w-100" asp-action="PedidoLanches" asp-route-id="@item.PedidoId">Ver Itens</a>
				</td>
			</tr>
		}
	</tbody>
</table>
