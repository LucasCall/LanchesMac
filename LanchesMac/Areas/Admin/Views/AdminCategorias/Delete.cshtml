@model LanchesMac.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Categoria</h1>

<h3>Tem certeza de que deseja excluir isto?</h3>

<div>
    <hr />
    <dl class="row bg-light pt-2 rounded">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>

    <div class="col d-flex justify-content-center my-3">
        <form asp-action="Delete">
            <input type="hidden" asp-for="CategoriaId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-secondary mx-1" asp-action="Index">Voltar para a Lista</a>
        </form>
    </div>
</div>
