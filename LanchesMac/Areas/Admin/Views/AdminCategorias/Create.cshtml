@model LanchesMac.Models.Categoria

@{
	ViewData["Title"] = "Create";
}

<h1>Criar nova Categoria</h1>

<hr />
<div class="row bg-light pt-2 rounded justify-content-center">
	<div class="col-md-5">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="CategoriaNome" class="control-label"></label>
				<input asp-for="CategoriaNome" class="form-control" />
				<span asp-validation-for="CategoriaNome" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Descricao" class="control-label"></label>
				<input asp-for="Descricao" class="form-control" />
				<span asp-validation-for="Descricao" class="text-danger"></span>
			</div>
			<div class="col d-flex justify-content-center my-3">
				<div class="form-group">
					<input type="submit" value="Criar Categoria" class="btn btn-primary" />
				</div>
				<div class="mx-1">
					<a class="btn btn-secondary" asp-action="Index">Voltar para a Lista</a>
				</div>
			</div>
		</form>
	</div>
</div>
