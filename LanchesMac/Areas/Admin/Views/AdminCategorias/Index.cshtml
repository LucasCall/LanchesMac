@model IEnumerable<LanchesMac.Models.Categoria>

@{
	ViewData["Title"] = "Index";
}

<h1>Categorias</h1>

<p>
	<a class="btn btn-primary" asp-action="Create">
		<i class="bi bi-plus-lg pe-1"></i>Criar nova Categoria
	</a>
</p>

<table class="table table align-middle table-striped">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.CategoriaNome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Descricao)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.CategoriaNome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Descricao)
				</td>
				<td>
					<a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.CategoriaId"><i class="bi bi-pencil-square pe-1"></i>Editar</a>
					<a class="btn btn-secondary my-1" asp-action="Details" asp-route-id="@item.CategoriaId"><i class="bi bi-file-text pe-1"></i>Detalhes</a>
					<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CategoriaId"><i class="bi bi-trash p3-1"></i>Deletar</a>
				</td>
			</tr>
		}
	</tbody>
</table>
